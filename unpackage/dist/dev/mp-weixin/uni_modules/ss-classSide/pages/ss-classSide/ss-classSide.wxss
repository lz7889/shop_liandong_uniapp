.page {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.left_view {
  width: 30%;
  height: 100%;
  background-color: #f8f8f8;
  position: relative;
  overflow: auto;
}
.left_view .seletItem {
  height: 60px;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 10;
  right: 0rpx;
  background-color: rgba(255, 255, 255, 0.3);
  -webkit-transition: top 0.2s linear;
  transition: top 0.2s linear;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.left_view .seletItem::before {
  content: '';
  width: 6rpx;
  height: 60%;
  background-color: #24c06a;
  left: 0rpx;
  border-radius: 0px 100rpx 100rpx 0px;
}
.left_view .left_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 60px;
  margin-bottom: 0rpx;
  position: relative;
  font-weight: bold;
  font-size: 28rpx;
}
.left_view .left_item_s {
  background-color: #ffffff;
  color: #24c06a;
  font-weight: bold;
  position: relative;
}
.right_view {
  width: 70%;
  height: 100%;
  overflow: auto;
  background-color: #ffffff;
  padding: 0rpx 12rpx;
  box-sizing: border-box;
}
.right_view .right_item .right_item_title {
  display: block;
  line-height: 30px;
  font-size: 16px;
  font-weight: bold;
}
.right_view .right_item .right_item_view {
  width: 100%;
  height: auto;
}
.right_view .right_item .right_item_view .item {
  width: 100%;
  padding: 5px 0;
}
.right_view .right_item .right_item_view .item image {
  width: 50px;
  height: 50px;
  float: left;
}
.right_view .right_item .right_item_view .item text {
  color: #333;
  margin-left: 10px;
  line-height: 50px;
}

